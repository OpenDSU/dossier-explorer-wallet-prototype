{
    "workDir": ".",
    "dependencies": [
        {
            "name": "webcardinal",
            "src": "https://github.com/webcardinal/webcardinal-minimal-release",
            "actions": [
                {
                    "type": "smartClone",
                    "target": ".",
                    "collectLog": false
                },
                {
                    "type": "execute",
                    "cmd": "cd webcardinal && npm install"
                }
            ]
        },
        {
            "name": "OpenDSU bundles",
            "src": "",
            "actions": [
                {
                    "type": "copy",
                    "src": "../../opendsu-sdk/builds/output/iframeBoot.js",
                    "target": "./scripts/bundles/iframeBoot.js"
                }
            ]
        }
    ]
}
